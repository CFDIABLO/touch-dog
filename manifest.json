{
  "manifest_version": 2,
  "name": "touch-dog",
  "version": "0.1.1",
  "description": "一个快速优雅的网页划词翻译工具。",
  "default_locale": "en",
  "author": "WittBulter",
  "homepage_url": "https://github.com/DhyanaChina/touch-dog",
  "icons": {
    "48": "assets/images/dog_38.png"
  },
  "permissions": [
    "storage",
    "*://*.baidu.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["app.js"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "38": "assets/images/dog_38.png"
    },
    "default_title": "Touch Dog",
    "default_popup": "./popup.html"
  }
}